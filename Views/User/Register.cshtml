@model TupiJua.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Criar Conta";
}

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center py-4">
    <div class="row w-100 justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-md-5">
                    <!-- Header -->
                    <div class="text-center mb-4">
                        <div class="mb-3">
                            <i class="fas fa-user-plus fa-3x text-primary"></i>
                        </div>
                        <h2 class="fw-bold mb-2">Criar Conta</h2>
                        <p class="text-muted mb-0">Preencha os dados para começar</p>
                    </div>

                    <!-- Form -->
                    <form asp-action="Register" method="post" id="registerForm" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Username Field -->
                        <div class="mb-3 form-field show profile-field" id="usernameField" data-step="1">
                            <label asp-for="Username" class="form-label fw-semibold">
                                Nome de Usuário
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-user text-muted"></i>
                                </span>
                                <input asp-for="Username" class="form-control border-start-0 ps-0" 
                                       placeholder="Escolha um nome de usuário" 
                                       autocomplete="off" />
                            </div>
                            <span asp-validation-for="Username" class="text-danger small"></span>
                        </div>

                        <!-- Email Field -->
                        <div class="mb-3 form-field" id="emailField" data-step="2" style="display: none;">
                            <label asp-for="Email" class="form-label fw-semibold">
                                E-mail
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-envelope text-muted"></i>
                                </span>
                                <input asp-for="Email" class="form-control border-start-0 ps-0" 
                                       type="email" 
                                       placeholder="seu@email.com" 
                                       autocomplete="off" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Password Field -->
                        <div class="mb-3 form-field" id="passwordField" data-step="3" style="display: none;">
                            <label asp-for="Password" class="form-label fw-semibold">
                                Senha
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-lock text-muted"></i>
                                </span>
                                <input asp-for="Password" class="form-control border-start-0 ps-0" 
                                       type="password" 
                                       placeholder="Crie uma senha forte" 
                                       autocomplete="new-password" />
                                <button class="btn btn-outline-secondary border-start-0" type="button" id="togglePassword">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <!-- Confirm Password Field -->
                        <div class="mb-4 form-field" id="confirmPasswordField" data-step="4" style="display: none;">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold">
                                Confirmar Senha
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-lock text-muted"></i>
                                </span>
                                <input asp-for="ConfirmPassword" class="form-control border-start-0 ps-0" 
                                       type="password" 
                                       placeholder="Digite a senha novamente" 
                                       autocomplete="new-password" />
                                <button class="btn btn-outline-secondary border-start-0" type="button" id="toggleConfirmPassword">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid mb-3" id="submitButton" style="display: none;">
                            <button type="submit" class="btn btn-primary btn-lg rounded-3">
                                <i class="fas fa-user-plus me-2"></i>Criar Conta
                            </button>
                        </div>

                        <!-- Login Link -->
                        <div class="text-center" id="loginLink">
                            <p class="text-muted mb-0">
                                Já tem uma conta? 
                                <a asp-action="Login" class="text-decoration-none fw-semibold">
                                    Entrar <i class="fas fa-arrow-right ms-1"></i>
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
