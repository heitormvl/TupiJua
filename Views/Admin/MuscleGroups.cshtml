@model List<TupiJua.Models.MuscleGroup>

@{
    ViewData["Title"] = "Grupos Musculares";
}

<div class="container-fluid px-3 px-md-4 py-4">
    <div class="row g-3 g-md-4">
        <!-- Alert Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="col-12">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
                </div>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="col-12">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
                </div>
            </div>
        }

        <!-- Header -->
        <div class="col-12">
            <div class="mb-3">
                <a asp-action="Index" class="btn btn-sm btn-outline-secondary mb-3">
                    <i class="fas fa-arrow-left me-2"></i>
                    Voltar ao Admin
                </a>
            </div>
            <div class="d-flex align-items-center justify-content-between">
                <div>
                    <h1 class="h3 mb-2">
                        <i class="fas fa-layer-group me-2"></i>
                        Grupos Musculares
                    </h1>
                    <p class="text-muted mb-0">Gerencie os grupos musculares disponíveis</p>
                </div>
                <div>
                    <a asp-action="CreateMuscleGroup" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>
                        Novo Grupo
                    </a>
                </div>
            </div>
        </div>

        <!-- Muscle Groups List -->
        @if (Model.Any())
        {
            <div class="col-12">
                <div class="card">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-4" style="width: 60px;">Cor</th>
                                        <th>Nome</th>
                                        <th class="d-none d-md-table-cell">Descrição</th>
                                        <th class="text-center" style="width: 120px;">Exercícios</th>
                                        <th class="text-end pe-4" style="width: 180px;">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var muscleGroup in Model)
                                    {
                                        <tr>
                                            <td class="ps-4">
                                                @if (!string.IsNullOrEmpty(muscleGroup.Color))
                                                {
                                                    <div class="muscle-group-color-badge" style="background-color: #@muscleGroup.Color;"></div>
                                                }
                                                else
                                                {
                                                    <div class="muscle-group-color-badge" style="background-color: #6c757d;"></div>
                                                }
                                            </td>
                                            <td>
                                                <strong>@muscleGroup.Name</strong>
                                            </td>
                                            <td class="d-none d-md-table-cell text-muted">
                                                @if (!string.IsNullOrEmpty(muscleGroup.Description))
                                                {
                                                    @(muscleGroup.Description.Length > 60 ? muscleGroup.Description.Substring(0, 60) + "..." : muscleGroup.Description)
                                                }
                                                else
                                                {
                                                    <em>Sem descrição</em>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-info">
                                                    @muscleGroup.ExerciseMuscleGroups.Count
                                                </span>
                                            </td>
                                            <td class="text-end pe-4">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="EditMuscleGroup" asp-route-id="@muscleGroup.Id" 
                                                       class="btn btn-outline-primary" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-outline-danger" 
                                                            data-bs-toggle="modal" 
                                                            data-bs-target="#deleteMuscleGroupModal"
                                                            data-id="@muscleGroup.Id"
                                                            data-name="@muscleGroup.Name"
                                                            title="Excluir">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="col-12">
                <div class="empty-state">
                    <i class="fas fa-layer-group"></i>
                    <h5>Nenhum grupo muscular cadastrado</h5>
                    <p class="text-muted">Comece criando seu primeiro grupo muscular</p>
                    <a asp-action="CreateMuscleGroup" class="btn btn-cta">
                        <i class="fas fa-plus me-2"></i>
                        Criar Primeiro Grupo
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteMuscleGroupModal" tabindex="-1" aria-labelledby="deleteMuscleGroupModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title" id="deleteMuscleGroupModalLabel">
                    <i class="fas fa-exclamation-triangle text-danger me-2"></i>
                    Confirmar Exclusão
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
                <p class="mb-2">Tem certeza que deseja excluir o grupo muscular:</p>
                <p class="fw-bold mb-3" id="muscleGroupNameToDelete"></p>
                <div class="alert alert-warning mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    <small><strong>Atenção:</strong> Grupos musculares associados a exercícios não podem ser excluídos.</small>
                </div>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>
                    Cancelar
                </button>
                <form id="deleteMuscleGroupForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>
                        Excluir
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Handle delete modal
        const deleteMuscleGroupModal = document.getElementById('deleteMuscleGroupModal');
        if (deleteMuscleGroupModal) {
            deleteMuscleGroupModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                const id = button.getAttribute('data-id');
                const name = button.getAttribute('data-name');
                
                const form = document.getElementById('deleteMuscleGroupForm');
                const nameDisplay = document.getElementById('muscleGroupNameToDelete');
                
                form.action = '@Url.Action("DeleteMuscleGroup", "Admin")/' + id;
                nameDisplay.textContent = name;
            });
        }
    </script>
}
