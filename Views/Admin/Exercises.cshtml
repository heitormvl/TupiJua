@model List<TupiJua.Models.Exercise>

@{
    ViewData["Title"] = "Exercícios";
}

<div class="container-fluid px-3 px-md-4 py-4">
    <div class="row g-3 g-md-4">
        <!-- Alert Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="col-12">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
                </div>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="col-12">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
                </div>
            </div>
        }

        <!-- Header -->
        <div class="col-12">
            <div class="mb-3">
                <a asp-action="Index" class="btn btn-sm btn-outline-secondary mb-3">
                    <i class="fas fa-arrow-left me-2"></i>
                    Voltar ao Admin
                </a>
            </div>
            <div class="d-flex align-items-center justify-content-between">
                <div>
                    <h1 class="h3 mb-2">
                        <i class="fas fa-dumbbell me-2"></i>
                        Exercícios
                    </h1>
                    <p class="text-muted mb-0">Gerencie os exercícios disponíveis</p>
                </div>
                <div>
                    <a asp-action="CreateExercise" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>
                        Novo Exercício
                    </a>
                </div>
            </div>
        </div>

        <!-- Exercises List -->
        @if (Model.Any())
        {
            <div class="col-12">
                <div class="row g-3">
                    @foreach (var exercise in Model)
                    {
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="exercise-admin-card">
                                <div class="exercise-admin-header">
                                    <h5 class="exercise-admin-name">
                                        <i class="fas fa-dumbbell me-2"></i>
                                        @exercise.Name
                                    </h5>
                                </div>
                                <div class="exercise-admin-body">
                                    @if (!string.IsNullOrEmpty(exercise.Description))
                                    {
                                        <p class="exercise-admin-description">
                                            @(exercise.Description.Length > 100 ? exercise.Description.Substring(0, 100) + "..." : exercise.Description)
                                        </p>
                                    }
                                    else
                                    {
                                        <p class="exercise-admin-description text-muted">
                                            <em>Sem descrição</em>
                                        </p>
                                    }

                                    @if (exercise.ExerciseMuscleGroups.Any())
                                    {
                                        <div class="muscle-groups-container mt-3">
                                            @foreach (var emg in exercise.ExerciseMuscleGroups)
                                            {
                                                <span class="badge @(emg.IsPrimary ? "bg-primary" : "bg-secondary")" 
                                                      style="@(emg.MuscleGroup.Color != null ? $"background-color: #{emg.MuscleGroup.Color} !important;" : "")">
                                                    @emg.MuscleGroup.Name
                                                    @if (emg.IsPrimary)
                                                    {
                                                        <i class="fas fa-star ms-1"></i>
                                                    }
                                                </span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="mt-3">
                                            <small class="text-muted">
                                                <i class="fas fa-info-circle me-1"></i>
                                                Nenhum grupo muscular associado
                                            </small>
                                        </div>
                                    }
                                </div>
                                <div class="exercise-admin-footer">
                                    <a asp-action="EditExercise" asp-route-id="@exercise.Id" 
                                       class="btn btn-sm btn-outline-primary flex-fill">
                                        <i class="fas fa-edit me-1"></i>
                                        Editar
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger flex-fill" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#deleteExerciseModal"
                                            data-id="@exercise.Id"
                                            data-name="@exercise.Name">
                                        <i class="fas fa-trash me-1"></i>
                                        Excluir
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="col-12">
                <div class="empty-state">
                    <i class="fas fa-dumbbell"></i>
                    <h5>Nenhum exercício cadastrado</h5>
                    <p class="text-muted">Comece criando seu primeiro exercício</p>
                    <a asp-action="CreateExercise" class="btn btn-cta">
                        <i class="fas fa-plus me-2"></i>
                        Criar Primeiro Exercício
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteExerciseModal" tabindex="-1" aria-labelledby="deleteExerciseModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title" id="deleteExerciseModalLabel">
                    <i class="fas fa-exclamation-triangle text-danger me-2"></i>
                    Confirmar Exclusão
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
                <p class="mb-2">Tem certeza que deseja excluir o exercício:</p>
                <p class="fw-bold mb-3" id="exerciseNameToDelete"></p>
                <div class="alert alert-warning mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    <small><strong>Atenção:</strong> Exercícios que já foram registrados em treinos não podem ser excluídos.</small>
                </div>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>
                    Cancelar
                </button>
                <form id="deleteExerciseForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>
                        Excluir
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Handle delete modal
        const deleteExerciseModal = document.getElementById('deleteExerciseModal');
        if (deleteExerciseModal) {
            deleteExerciseModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                const id = button.getAttribute('data-id');
                const name = button.getAttribute('data-name');
                
                const form = document.getElementById('deleteExerciseForm');
                const nameDisplay = document.getElementById('exerciseNameToDelete');
                
                form.action = '@Url.Action("DeleteExercise", "Admin")/' + id;
                nameDisplay.textContent = name;
            });
        }
    </script>
}
