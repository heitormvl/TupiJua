@model (List<TupiJua.Models.WorkoutPlan> activePlans, List<TupiJua.Models.WorkoutSession> recentSessions)

@{
    ViewData["Title"] = "Página Inicial";
    var isAuthenticated = User.Identity?.IsAuthenticated == true;
}

@if (isAuthenticated)
{
    <div class="container-fluid px-3 px-md-4 py-4">
        <div class="row g-3 g-md-4">
            <!-- Hero Section -->
            <div class="col-12">
                <div class="hero-card">
                    <div class="hero-content">
                        <h1 class="hero-title">
                            <i class="fas fa-fire me-2"></i>
                            Bem-vindo ao TupiJua!
                        </h1>
                        <p class="hero-subtitle">Transforme seus treinos em resultados reais</p>
                        <a asp-controller="Training" asp-action="Index" class="btn btn-cta">
                            <i class="fas fa-dumbbell me-2"></i>
                            Começar a Treinar
                        </a>
                    </div>
                </div>
            </div>

            <!-- Active Workout Plans Section -->
            <div class="col-12">
                @if (Model.activePlans.Any())
                {
                    <div class="workout-plans-card">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <h5 class="mb-0">
                                <i class="fas fa-clipboard-list me-2"></i>
                                Meus Planos Ativos
                                <span class="badge bg-primary ms-2" style="font-size: 0.75rem; vertical-align: middle;">@Model.activePlans.Count</span>
                            </h5>
                            <a asp-controller="WorkoutPlan" asp-action="Index" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-cog me-1"></i>
                                Gerenciar
                            </a>
                        </div>
                        <div class="row g-3 plans-carousel-row">
                            @foreach (var plan in Model.activePlans)
                            {
                                var totalSets = plan.PlanExercises.Sum(pe => pe.TargetSets);
                                <div class="col-12 col-lg-6 plans-carousel-col">
                                    <div class="workout-plan-card">
                                        <div class="plan-card-header">
                                            <h4 class="plan-name">
                                                <i class="fas fa-bookmark me-2"></i>@plan.Name
                                            </h4>
                                            <div class="plan-stats">
                                                <div class="stat-item">
                                                    <i class="fas fa-list-ol me-1"></i>
                                                    @plan.PlanExercises.Count @(plan.PlanExercises.Count == 1 ? "exercício" : "exercícios")
                                                </div>
                                                @if (plan.PlanExercises.Any())
                                                {
                                                    <div class="stat-item">
                                                        <i class="fas fa-redo me-1"></i>
                                                        @totalSets @(totalSets == 1 ? "série" : "séries")
                                                    </div>
                                                }
                                            </div>
                                        </div>

                                        @if (plan.PlanExercises.Any())
                                        {
                                            <div class="plan-exercises-list">
                                                <p class="exercises-title">
                                                    <i class="fas fa-dumbbell me-1"></i>Exercícios
                                                </p>
                                                <ul class="exercises-list">
                                                    @foreach (var pe in plan.PlanExercises.OrderBy(p => p.Order).Take(3))
                                                    {
                                                        <li class="exercise-item">
                                                            <span class="exercise-order">@pe.Order</span>
                                                            <div class="exercise-details">
                                                                <strong>@(pe.Exercise?.Name ?? "Exercício removido")</strong>
                                                                <small>@pe.TargetSets×@pe.TargetReps</small>
                                                            </div>
                                                        </li>
                                                    }
                                                    @if (plan.PlanExercises.Count > 3)
                                                    {
                                                        <li class="exercise-item">
                                                            <span class="exercise-order" style="background: var(--tj-bg-secondary); color: var(--tj-text-muted);">
                                                                <i class="fas fa-ellipsis-h"></i>
                                                            </span>
                                                            <div class="exercise-details">
                                                                <small style="background: none; color: var(--tj-text-muted); padding: 0; font-weight: 500;">
                                                                    +@(plan.PlanExercises.Count - 3) exercício@(plan.PlanExercises.Count - 3 > 1 ? "s" : "")
                                                                </small>
                                                            </div>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        }

                                        <div class="plan-card-actions">
                                            <form asp-controller="Training" asp-action="StartTrainingFromPlan" method="post" class="m-0 w-100">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="workoutPlanId" value="@plan.Id" />
                                                <button type="submit" class="btn btn-primary w-100">
                                                    <i class="fas fa-play me-2"></i>Executar Plano
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <!-- Call to Action - No Plans -->
                    <div class="workout-plans-card">
                        <div class="empty-state py-5">
                            <i class="fas fa-clipboard-list"></i>
                            <h5>Nenhum Plano de Treino Ativo</h5>
                            <p class="mb-4">Crie seu primeiro plano e organize seus treinos!</p>

                            <a asp-controller="WorkoutPlan" asp-action="Create" class="btn btn-cta">
                                <i class="fas fa-plus-circle me-2"></i>
                                Criar Meu Primeiro Plano
                            </a>
                        </div>
                    </div>
                }
            </div>

            <!-- Recent Sessions Section -->
            <div class="col-12">
                <div class="history-section">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <h4 class="section-title mb-0">
                            <i class="fas fa-history me-2"></i>
                            Últimos Treinos
                        </h4>
                        @if (Model.recentSessions.Any())
                        {
                            <a asp-controller="Training" asp-action="Index" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-list me-1"></i>
                                Ver Todos
                            </a>
                        }
                    </div>

                    @if (Model.recentSessions.Any())
                    {
                        <div class="timeline">
                            @foreach (var session in Model.recentSessions)
                            {
                                var hasProgressFlag = session.LoggedExercises.Any(le => le.Observation?.Contains("aumentar") == true);
                                var exerciseCount = session.LoggedExercises.Count;
                                var totalSetsSession = session.LoggedExercises.Sum(le => le.Sets);
                                var exerciseNames = string.Join(", ", session.LoggedExercises
                                    .Select(le => le.Exercise?.Name ?? "Exercício removido").Take(3));
                                if (exerciseCount > 3)
                                    exerciseNames += $" +{exerciseCount - 3}";

                                <div class="timeline-item visible">
                                    <div class="timeline-marker"></div>
                                    <div class="workout-card">
                                        <div class="workout-header">
                                            <div>
                                                <h5 class="workout-date mb-0">
                                                    @session.Date.ToString("dd 'de' MMM", new System.Globalization.CultureInfo("pt-BR"))
                                                    <small class="workout-time text-muted fw-normal ms-2">
                                                        <i class="fas fa-clock me-1"></i>@session.Date.ToString("HH:mm")
                                                    </small>
                                                </h5>
                                            </div>
                                            <div class="d-flex align-items-center gap-2">
                                                @if (hasProgressFlag)
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="fas fa-arrow-up me-1"></i>Progressão
                                                    </span>
                                                }
                                                @if (session.IsCompleted)
                                                {
                                                    <span class="badge" style="background: rgba(25,135,84,0.12); color: #198754;">
                                                        <i class="fas fa-check me-1"></i>Concluído
                                                    </span>
                                                }
                                            </div>
                                        </div>
                                        <div class="workout-body">
                                            @if (!string.IsNullOrEmpty(session.WorkoutPlan?.Name))
                                            {
                                                <p class="workout-plan-name">
                                                    <i class="fas fa-bookmark text-primary"></i>@session.WorkoutPlan.Name
                                                </p>
                                            }
                                            <p class="workout-exercises">
                                                @(string.IsNullOrWhiteSpace(exerciseNames) ? "Nenhum exercício registrado" : exerciseNames)
                                            </p>
                                            <div class="workout-stats">
                                                <span class="stat-badge">
                                                    <i class="fas fa-list-ol me-1"></i>
                                                    @exerciseCount exercício@(exerciseCount != 1 ? "s" : "")
                                                </span>
                                                <span class="stat-badge">
                                                    <i class="fas fa-redo me-1"></i>
                                                    @totalSetsSession série@(totalSetsSession != 1 ? "s" : "")
                                                </span>
                                            </div>
                                        </div>
                                        <div class="workout-footer justify-content-center">
                                            <a asp-controller="Training" asp-action="ViewWorkout" asp-route-sessionId="@session.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye me-1"></i>
                                                Detalhes
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-clipboard-list"></i>
                            <h5>Nenhum Treino Registrado</h5>
                            <p class="mb-4">Comece agora e acompanhe sua evolução!</p>
                            <a asp-controller="Training" asp-action="Index" class="btn btn-primary btn-lg">
                                <i class="fas fa-fire me-2"></i>
                                Iniciar Treino Agora
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Landing Page for Non-Authenticated Users -->
    <div class="container-fluid px-3 px-md-4 py-5">
        <div class="row g-4 align-items-center">
            <div class="col-12 col-lg-6">
                <div class="hero-card">
                    <div class="hero-content text-start">
                        <h1 class="hero-title display-3 mb-4">
                            Transforme Seus Treinos
                        </h1>
                        <p class="hero-subtitle fs-5 mb-4">
                            Registre exercícios, acompanhe progressões e alcance seus objetivos com o TupiJua
                        </p>
                        <div class="d-flex flex-column flex-sm-row gap-3">
                            <a asp-controller="User" asp-action="Register" class="btn btn-cta">
                                <i class="fas fa-user-plus me-2"></i>
                                Criar Conta Grátis
                            </a>
                            <a asp-controller="User" asp-action="Login" class="btn btn-outline-light btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                Entrar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-6">
                <div class="row g-3">
                    <div class="col-12 col-md-6">
                        <div class="stat-card stat-card-1">
                            <div class="stat-icon">
                                <i class="fas fa-clipboard-list"></i>
                            </div>
                            <div class="stat-content">
                                <div class="stat-label">Planos de Treino</div>
                                <p class="mb-0 text-muted small">Organize suas fichas</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="stat-card stat-card-2">
                            <div class="stat-icon">
                                <i class="fas fa-chart-line"></i>
                            </div>
                            <div class="stat-content">
                                <div class="stat-label">Acompanhe Progresso</div>
                                <p class="mb-0 text-muted small">Veja sua evolução</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="stat-card stat-card-3">
                            <div class="stat-icon">
                                <i class="fas fa-dumbbell"></i>
                            </div>
                            <div class="stat-content">
                                <div class="stat-label">Registre Exercícios</div>
                                <p class="mb-0 text-muted small">Controle cada série</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="stat-card stat-card-1">
                            <div class="stat-icon">
                                <i class="fas fa-history"></i>
                            </div>
                            <div class="stat-content">
                                <div class="stat-label">Histórico Completo</div>
                                <p class="mb-0 text-muted small">Todos seus treinos</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Timeline items animation on scroll
        document.addEventListener('DOMContentLoaded', function () {
            const timelineItems = document.querySelectorAll('.timeline-item:not(.visible)');

            if (timelineItems.length > 0) {
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.classList.add('visible');
                        }
                    });
                }, {
                    threshold: 0.1
                });

                timelineItems.forEach(item => observer.observe(item));
            }
        });
    </script>
}